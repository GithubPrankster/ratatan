x=8 y=8 g=0.1 vx=0.5 sc=0.25
vy=0 act=true scrl=0 lm=125
nx=96 ny=rnd(64)+32 bp=1
function oopsie(v)
	g=0 vy=0 vx=0 sc=0
	if act then
		sfx(v,1) act=false
		sfx(-1,0)
	end
end

sqrt0=sqrt
function sqrt(n)
	if(n<=0) return 0
	if(n>=32761) return 181.0
	return sqrt0(n)
end

function hitter()
 ax=x-nx ay=y-ny
	return sqrt(ax*ax+ay*ay) < 10
end

function _init()
	sfx(1,0)
end

function _update60()
	if(btn(2) and act)then vy-=0.3 end
	vy+=g x+=vx y+=vy
	if y>lm or y<3 or x>lm then
		oopsie(0)
	end
	if hitter() then oopsie(2) end
	scrl+=sc bp+=sc/2
	if scrl>16 then scrl=0 end
end

function _draw()
	cls(0) map(0,0,-scrl,0,18,16)
	circfill(x,y,2,7)
	circfill(nx,ny,8,bp)
end
